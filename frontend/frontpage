	<script>
		// Simple localStorage-backed About Us editor
		const KEY = 'niad_about_text_v1';
		const input = document.getElementById('about-input');
		const preview = document.getElementById('about-preview');
		const saveBtn = document.getElementById('save-btn');
		const resetBtn = document.getElementById('reset-btn');

		function load(){
			const text = localStorage.getItem(KEY) || '';
			input.value = text;
			renderPreview(text);
		}
		function renderPreview(text){
			if(!text) preview.textContent = 'No description yet. Write something and press Save.';
			else preview.textContent = text;
		}
		saveBtn.addEventListener('click', ()=>{
			const v = input.value.trim();
			localStorage.setItem(KEY, v);
			renderPreview(v);
			saveBtn.textContent = 'Saved ✓';
			setTimeout(()=>saveBtn.textContent='Save',1200);
		});
		resetBtn.addEventListener('click', ()=>{
			input.value = '';
			localStorage.removeItem(KEY);
			renderPreview('');
		});
		// initialize
		load();
	</script>
